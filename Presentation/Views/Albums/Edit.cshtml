@using Presentation.ViewModels;
@model EditEntryViewModel
@{
    ViewData["Title"] = "Details Page";
}

<form asp-controller="Albums" asp-action="EditEntry" method="post">
    <input type="hidden" id="inventoryEntryId" name="inventoryEntryId" value="@Model.Entry.Id">
    <input type="hidden" id="albumId" name="albumId" value="@Model.Entry.Album.Id">
    <input type="hidden" id="artistId" name="artistId" value="@Model.Entry.Album.Artist.Id">
    <input type="hidden" id="recordLabelId" name="recordLabelId" value="@Model.Entry.Album.RecordLabel.Id">
    <div class="form-group">
        <label for="albumName">Album Name</label>
        <input type="text" class="form-control" id="albumName" name="albumName" placeholder="Enter the album name" value="@Model.Entry.Album.Name">
    </div>
    <div class="form-group">
        <label for="artist">Artist</label>
        <input type="text" class="form-control" placeholder="Enter the name of the artist" value="@Model.Entry.Album.Artist.Name" disabled>
        <input type="hidden" class="form-control" id="artist" name="artist" value="@Model.Entry.Album.Artist.Name">
    </div>
    <div class="form-group">
        <label for="recordLabel">Label</label>
        <input type="text" class="form-control" placeholder="Enter the name of the record label" value="@Model.Entry.Album.RecordLabel.Name" disabled>
        <input type="hidden" class="form-control" id="recordLabel" name="recordLabel" value="@Model.Entry.Album.RecordLabel.Name">
    </div>
    <div class="form-group">
        <label for="stock">Stock</label>
        <input type="number" class="form-control" id="stock" name="stock" placeholder="Enter the stock available for this album"
               value="@Model.Entry.Stock">
    </div>
    <div class="form-group">
        <label for="albumType">Album Type</label>
        <select class="form-control" id="albumType" name="albumType">
            @foreach (var type in Model.AlbumTypes)
            {
                <option selected="@(Model.Entry.Album.Type == type)">@type.ToString()</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Edit Entry</button>
</form>
