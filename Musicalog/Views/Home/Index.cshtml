@using Presentation.ViewModels;
@model InventoryViewModel
@{
    ViewData["Title"] = "Home Page";
}

<partial name="_pagination" for="Pagination" />

<div class="container">
    <div class="card-deck">
        @foreach (var entry in Model.InventoryEntries)
        {
            <div class="col-xl-6 col-lg-3 mt-3">
                <div class="card">
                    <ul class="text-truncate">
                        <li><span class="font-weight-bold">Album name:</span> @entry.Album.Name</li>
                        <li><span class="font-weight-bold">Artist name:</span>  @entry.Album.Artist.Name</li>
                        <li><span class="font-weight-bold">Available stock:</span> @entry.Stock</li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
