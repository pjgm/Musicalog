@using Presentation.ViewModels;
@model InventoryViewModel
@{
    ViewData["Title"] = "Home Page";
}

<partial name="_pagination" for="Pagination" />

<div class="container">
    <div class="card-deck">
        @foreach (var entry in Model.InventoryEntries)
        {
            <div class="col-xl-6 col-lg-3 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Albums" asp-action="Details" asp-route-id="@entry.Id">
                                @entry.Album.Name
                            </a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted"> @entry.Album.Artist.Name</h6>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Album type: @entry.Album.Type</li>
                        <li class="list-group-item">Stock: @entry.Stock</li>
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Albums" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-primary">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
