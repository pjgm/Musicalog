@using Presentation.ViewModels;
@model PaginationViewModel

<div class="d-flex flex-row justify-content-between">

    <div class="form-group form-inline">
        <select class="form-control" id="pageSize" name="pageSize">
            <option value="" selected disabled>Results</option>
            <option>5</option>
            <option>10</option>
            <option>20</option>
        </select>
    </div>

    <nav aria-label="Album navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 0 ? "disabled" : "")">
                <a class="page-link"
                   tabindex="-1"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-pageindex="@(Model.CurrentPage - Model.PageSize)"
                   asp-route-pagesize="@Model.PageSize">
                    Previous Page
                </a>
            </li>
            <li class="page-item @(Model.IsLastPage ? "disabled" : "")">
                <a class="page-link"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-pageindex="@(Model.CurrentPage + Model.PageSize)"
                   asp-route-pagesize="@Model.PageSize">
                    Next Page
                </a>
            </li>
        </ul>
    </nav>

    <div class="form-group form-inline">
        <select class="form-control" id="sortBy" name="sortBy">
            <option value="" selected disabled>Sort By</option>
            <option>Album Name</option>
            <option>Artist Name</option>
            <option>Record Label</option>
        </select>
    </div>
</div>